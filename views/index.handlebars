<h1>Burgers!</h1>
<div class="row">
<div class="col-md-4">
<h2>Burgers ready to be eaten!</h2>

<ul class="list-group">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="col-md-4"></div>
<div class="col-md-4">
<h2>Burgers that were devoured!</h2>


<ul class="list-group">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
<div class="col-md-4"></div>  
<div class="col-md-4">



<h2 class="center center-block">Add a Burger</h2>
<form class="create-form">

  <div class="form-group center">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group center">
    <label for="devoured">devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Looks Tasty
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
<div class="col-md-12"></div>
</div>